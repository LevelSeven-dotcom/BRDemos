@model FeedbackModel.Domain.Entities.Feedback

<h2>Create Feedback</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="StudentName">Student Name</label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Course">Course</label>
        <input asp-for="Course" class="form-control" />
        <span asp-validation-for="Course" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Rating">Rating (1-5)</label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Feedbacks">Feedback</label>
        <input asp-for="Feedbacks" class="form-control" />
        <span asp-validation-for="Feedbacks" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

